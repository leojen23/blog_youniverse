{% extends 'base.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
    <h1>Liste des catégories</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.id }}</td>
                <td>{{ category.name }}</td>
                <td>
                <div class="d-flex">
                        {# <a class="btn btn-primary" href="{{ path('app_admin_category_show', {'id': category.id}) }}">Voir</a>  #}
                        <a class="btn btn-primary mx-2" href="{{ path('app_admin_category_edit', {'id': category.id}) }}">modifier</a>
                        {{ include('admin_category/_delete_form.html.twig') }}
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">Il n'y aucune catégories enregistrées</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_admin_category_new') }}">Ajouter une catégorie</a>
{% endblock %}
