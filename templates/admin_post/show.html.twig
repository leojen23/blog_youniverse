{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block body %}

 <div class="post-content">
    <h1>{{ post.title}}</h1>
    <span>Date de création : {{ post.createdAt ? post.createdAt|date('d/m/Y') : '' }}</span>
    <div class="d-flex mt-2">
        <a class="btn btn-primary mr-2" href="{{ path('app_admin_post_index') }}">Retour à la liste des articles</a>
        <a class="btn btn-primary mx-2" href="{{ path('app_admin_post_edit', {'id': post.id}) }}">Modifier</a>
        {{ include('admin_post/_delete_form.html.twig') }}
    </div>
     <hr>
        {{ post.content }}
</div>


   
{% endblock %}
