{% extends 'base.html.twig' %}

{% block title %}User index{% endblock %}

{% block body %}
    <h1>Liste des utilisateurs</h1>

   {% if message is not empty %}
    <div class="alert alert-danger" role="alert">
        {{message}} 
    </div>
   {% endif %}

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Adresse email</th>
                <th>Role</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.email }}</td>
                <td>{% if "ROLE_ADMIN" in user.roles %} 
                Administrateur
                {% else %}
                Utilisateur
                {% endif %}
                </td>
                <td>
                    {{ include('admin_user/_delete_form.html.twig') }}
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">Aucun utiliseur en base de donn√©es</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
